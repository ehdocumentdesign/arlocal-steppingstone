= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: :arl_form, method: :put }) do |f|
  .arl_form_title
    Administrator profile

  .arl_form_data
    .arl_form_data_attr
      = f.label :name, class: :arl_form_data_attr_label
      = f.text_field :name, size: 40, class: :arl_form_data_attr_input_text_field
    .arl_form_data_attr
      = f.label :email, class: :arl_form_data_attr_label
      = f.email_field :email, class: :arl_form_data_attr_input_text_field
    .arl_form_data_attr
      = f.label :has_authority_to_write, class: :arl_form_data_attr_label
      = f.check_box :has_authority_to_write, class: :arl_form_data_attr_input_checkbox
      = f.label :has_authority_to_write, '&nbsp;'.html_safe, class: :arl_form_data_attr_input_checkbox_visible, tabindex: 0
      %aside.arl_form_data_attr_explanation This can only be changed from the server command line.
    .arl_form_data_attr
      = f.label :current_password, class: :arl_form_data_attr_label
      %aside.arl_form_data_attr_explanation
        (current password required to confirm your changes)
      = f.password_field :current_password, autocomplete: 'off', class: :arl_form_data_attr_input_text_field

  .arl_form_actions
    = f.submit 'Update Administrator', class: :arl_button_form_submit

%h2.arl_admin_markup_types_heading Plain Text
%table.arl_admin_markup_types_demo
  %tr
    %th.arl_admin_markup_types_demo_heading.color_bg_th text data
    %th.arl_admin_markup_types_demo_heading.color_bg_th plain text result
  - markup_examples.each do |markup_example|
    %tr.arl_admin_markup_types_demo_example
      %td.arl_admin_markup_types_demo_markup_text
        = simple_format(markup_example)
      %td.arl_admin_markup_types_demo_parsed
        = parser.parse_and_sanitize(markup_example)

= form_with(model: [:admin, arlocal_settings], url: admin_arlocal_settings_path(arlocal_settings, pane: :audio), local: true, class: :arl_form, method: :patch) do |f|
  .arl_form_title
    Audio settings
  .arl_form_data
    = render 'form_elements_arls/audio_default_date_released_enabler', form: f
    = render 'form_elements/text_field_sized', attribute: :audio_default_isrc_country_code, form: f, size: 8
    = render 'form_elements/text_field_sized', attribute: :audio_default_isrc_registrant_code, form: f, size: 8
  .arl_form_actions
    = f.submit 'Update A&R.local settings', class: :arl_button_form_submit

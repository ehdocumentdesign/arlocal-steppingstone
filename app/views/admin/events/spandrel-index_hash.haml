= html_head_subtitle_set 'events'

.arl_admin_resource_header.resource_index
  .arl_admin_resource_header_category
    Events Index
  .arl_admin_resource_header_buttons
    = event_admin_button_to_public

/.arl_events_select
/  = events_admin_filter_select
.arl_events_index
  - @events_calendar.each_pair do |year, events|
    %table.arl_events_index_table
      %caption.arl_events_index_by_year.color_bg3
        = year
      - events.each do |event|
        %tr.arl_events_index_event.arl_active_link_container{data: {url: admin_event_path(event.id_public)}}
          = render 'index_event_coverpicture', event: event
          = render 'index_event_info', event: event

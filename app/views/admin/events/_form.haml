= form_with(model: [:admin, event], local: true, class: :arl_form) do |f|
  .arl_form_title
    Event details
  .arl_form_data
    = render 'form_elements/parseable_field', attribute: :title,                            form: f, selectable: selectable
    = render 'form_elements/datetime_zone',   attribute: :datetime,                         form: f
    = render 'form_elements/visibility',      attribute: :visibility,                       form: f
    = render 'form_elements/auto_keyword',    attribute: :event_keywords,                   form: f, auto_keyword: @auto_keyword
    = render 'form_elements/spacer'
    = render 'form_elements/text_field',      attribute: :alert,                            form: f
    = render 'form_elements/text_field',      attribute: :city,                             form: f
    = render 'form_elements/parseable_area',  attribute: :details,                          form: f, selectable: selectable
    = render 'form_elements/text_field',      attribute: :map_url,                          form: f
    = render 'form_elements/check_box',       attribute: :show_can_cycle_pictures,          form: f
    -# render 'form_elements/check_box',      attribute: :show_can_have_more_pictures_link, form: f
    = render 'form_elements/text_field',      attribute: :venue,                            form: f
    = render 'form_elements/text_field',      attribute: :venue_url,                        form: f
  .arl_form_actions
    = f.submit class: :arl_button_form_submit

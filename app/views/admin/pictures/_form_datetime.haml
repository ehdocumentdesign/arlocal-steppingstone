.arl_form_title
  Picture date and time information

.arl_form_data
  .arl_form_data_attr
    %label.arl_form_data_attr_label Effective date/time:
    %div.arl_form_data_attr_value= picture_datetime_effective_statement(picture)

= form_with(model: [:admin, picture], url: admin_picture_path(picture, pane: :datetime), local: true, class: :arl_form) do |f|
  .arl_form_data
    .arl_form_data_attr
      %label.arl_form_data_attr_label Date/time from manual entry:
      %aside.arl_form_data_attr_explanation Use a 24-hr clock. (Midnight = 00:00; 1:00pm = 13:00)
      .arl_form_data_attr_multi
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_year, 'yyyy', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_year, size: 3, class: :arl_form_data_attr_input_text_field
        .arl_form_data_attr_multi_spacer= '-'
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_month, 'mm', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_month, size: 2, maxlength: 2, class: :arl_form_data_attr_input_text_field
        .arl_form_data_attr_multi_spacer= '-'
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_day, 'dd', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_day, size: 2, maxlength: 2, class: :arl_form_data_attr_input_text_field
        .arl_form_data_attr_multi_spacer= ' '
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_hour, 'hh', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_hour, size: 2, maxlength: 2, class: :arl_form_data_attr_input_text_field
        .arl_form_data_attr_multi_spacer= ':'
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_minute, 'mm', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_minute, size: 2, maxlength: 2, class: :arl_form_data_attr_input_text_field
        .arl_form_data_attr_multi_spacer= ':'
        .arl_form_data_attr_multi_field
          = f.label :datetime_from_manual_entry_second, 'ss', class: :arl_form_data_attr_multi_label
          = f.text_field :datetime_from_manual_entry_second, size: 2, maxlength: 2, class: :arl_form_data_attr_input_text_field
  .arl_form_actions
    = f.submit class: :arl_button_form_submit

.arl_form_data
  .arl_form_data_attr
    %label.arl_form_data_attr_label Date/time from image exif:
    %div.arl_form_data_attr_value= picture.datetime_from_exif
  .arl_form_data_attr
    %label.arl_form_data_attr_label Date/time from filesystem:
    %div.arl_form_data_attr_value= picture.datetime_from_file


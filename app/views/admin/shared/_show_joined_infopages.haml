.arl_admin_resource_show_joined_infopages
  .arl_admin_resource_show_joined_heading.arl_metadata_key
    = resource_joined_infopages_count_label(resource)
  - if resource.does_have_infopages
    %ul.arl_admin_resource_show_joined_items.arl_metadata_value
      - resource.joined_infopages_sorted.each do |joined_infopage|
        %li.arl_admin_resource_show_joined_item
          = infopage_admin_link_title(joined_infopage.infopage)

.arl_admin_resource_show_joined_audio
  .arl_admin_resource_show_joined_heading.arl_metadata_key
    = resource_joined_audio_count_label(resource)
  - if resource.does_have_audio
    %table.arl_admin_resource_show_joined_items.arl_metadata_table_values
      - resource.joined_audio_sorted.each do |joined_audio|
        %tr
          %td.arl_metadata_table_value_right
            = "#{joined_audio.order}." if joined_audio.does_have_order
          %td.arl_metadata_table_value_wrap
            = audio_admin_link_title(joined_audio.audio)
          %td.arl_metadata_table_value_right
            = joined_audio.audio.duration
          %td.arl_metadata_table_value
            = visibility_abbreviation(joined_audio.audio.visibility)

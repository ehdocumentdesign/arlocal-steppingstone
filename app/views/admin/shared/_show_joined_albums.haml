.arl_admin_resource_show_joined_albums
  .arl_admin_resource_show_joined_heading.arl_metadata_key
    = resource_joined_albums_count_label(resource)
  - if resource.does_have_albums
    %table.arl_admin_resource_show_joined_items.arl_metadata_table_values
      - resource.joined_albums.each do |joined_album|
        %tr
          %td.arl_metadata_table_value
            = album_admin_link_title(joined_album.album)
          %td.arl_metadata_table_value
            = visibility_description(joined_album.album.visibility)

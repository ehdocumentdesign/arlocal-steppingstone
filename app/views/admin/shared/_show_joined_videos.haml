.arl_admin_resource_show_joined_videos
  .arl_admin_resource_show_joined_heading.arl_metadata_key
    = resource_joined_videos_count_label(resource)
  - if resource.does_have_videos
    %table.arl_admin_resource_show_joined_items.arl_metadata_table_values
      - resource.joined_videos_sorted.each do |joined_video|
        %tr
          %td.arl_metadata_table_value
            = video_admin_link_title(joined_video.video)
          %td.arl_metadata_table_value
            = visibility_abbreviation(joined_video.video.visibility)

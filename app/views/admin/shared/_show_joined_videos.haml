.arl_admin_resource_show_joined_videos
  .arl_admin_resource_show_joined_heading.arl_metadata_key
    = resource_joined_videos_count_label(resource)
  - if resource.does_have_videos
    %ul.arl_admin_resource_show_joined_items.arl_metadata_value
      - resource.joined_videos.each do |joined_video|
        %li.arl_admin_resource_show_joined_item
          = video_reference_admin_link(joined_video.video)

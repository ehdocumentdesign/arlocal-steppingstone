= html_head_title_extend! 'Upload Audio'

.arl_admin_resource_header.resource_new
  .arl_admin_resource_header_category
    Upload Audio
  = render '/form_elements/errors', resource: @audio

.arl_admin_audio_edit
  = form_with(model: [:admin, Audio.new], local: true, url: admin_audio_create_from_upload_path, class: :arl_form) do |f|

    .arl_form_data
      = render 'form_elements/file_field', attribute: :source_uploaded, form: f

      - if @auto_keyword
        = f.fields_for :audio_keywords, f.object.audio_keywords.build do |ak|
          = render 'form_elements/auto_keyword', auto_keyword: @auto_keyword, form: ak

    .arl_form_actions
      = f.submit class: :arl_button_form_submit
